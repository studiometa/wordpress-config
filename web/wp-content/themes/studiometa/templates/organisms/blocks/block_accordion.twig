{#
/**
 * @file
 * Block Accordeon
 * Use https://ui.studiometa.dev/-/components/molecules/Accordion/
 * Display a title with an accordeon list
 *
 * Available variables:
 * - block.title      {String}
 * - block.list       {Array}
 *     - title   {String}
 *     - content {Wysiwyg}
 */
#}
<section class="block-accordion">
  <div class="container">
    <h3>
      {{ block.title }}
    </h3>

    {% embed '@ui/molecules/Accordion/Accordion.twig'
      with {
        items: block.list
      }
    %}
      {% block title %}
        {{ item.title }}
      {% endblock %}
      {% block content %}
        <div>
          {{ item.content|e('wp_kses_post')|raw }}
        </div>
      {% endblock %}
    {% endembed %}
  </div>
</section>
